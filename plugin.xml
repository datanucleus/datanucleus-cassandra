<plugin>
    <!-- STORE MANAGER -->
    <extension point="org.datanucleus.store_manager">
        <store-manager class-name="org.datanucleus.store.cassandra.CassandraStoreManager" key="cassandra" url-key="cassandra"/>
    </extension>

    <!-- CONNECTION FACTORY -->
    <extension point="org.datanucleus.store_connectionfactory">
        <connectionfactory name="cassandra" class-name="org.datanucleus.store.cassandra.ConnectionFactoryImpl" transactional="true"
            datastore="cassandra"/>
    </extension>

    <!-- PERSISTENCE PROPERTIES -->
    <extension point="org.datanucleus.persistence_properties">
        <persistence-property name="datanucleus.cassandra.socket.readTimeoutMillis" datastore="true"/>
        <persistence-property name="datanucleus.cassandra.socket.connectTimeoutMillis" datastore="true"/>
    </extension>

    <!-- QUERY LANGUAGES -->
    <extension point="org.datanucleus.store_query_query">
        <query class-name="org.datanucleus.store.cassandra.query.JDOQLQuery" datastore="cassandra" name="JDOQL"/>
        <query class-name="org.datanucleus.store.cassandra.query.JPQLQuery" datastore="cassandra" name="JPQL"/>
    </extension>
</plugin>